{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend (nodemon)",
      "type": "shell",
      "command": "powershell -NoExit -Command \"nodemon index.js\"",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "panel": "dedicated",
        "group": "backend"
      }
    },
    {
      "label": "Run Frontend (vite)",
      "type": "shell",
      "command": "powershell -NoExit -Command \"npx vite --host 0.0.0.0\"",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "panel": "dedicated",
        "group": "frontend"
      }
    },
    {
      "label": "Run Full Stack",
      "dependsOn": [
        "Run Backend (nodemon)",
        "Run Frontend (vite)"
      ],
      "dependsOrder": "parallel",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
